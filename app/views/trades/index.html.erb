<div class="container index-container">
  <h1 class="mb-5">Trades and Taxes</h1>
  <%= link_to profiles_my_dashboard_path(current_user), class:"btn-back" do  %>
  <i class="fas fa-arrow-circle-left arrow"></i>
  <% end %>
