<h4>Your chat</h4>
<div class="card">
  <div class="messages", data-controller="conversation-subscription",  data-conversation-subscription-conversation-id-value="<%= @conversation.id %>">
    <% if @messages.any? %>
      <% @messages.each do |message|%>
        <%= render "messages/message", message: message %>
      <%end %>
    <% else %>
      <p data-conversation-subscription-target="noMessages"> Start your conversation with <%= @user.username %> </p>
    <% end %>
  </div>
  <%= simple_form_for [@user, @message] do |f| %>
    <%= f.input :content, as: :string, label: false %>
  <% end %>
</div>
