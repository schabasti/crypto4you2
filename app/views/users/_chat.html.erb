<div data-controller="conversation-subscription", data-conversation-subscription-conversation-id-value="<%= @conversation.id %>">
  <div class="card chat-card">
    <div class="messages" data-conversation-subscription-target="messages">
      <% if @messages.any? %>
        <% @messages.each do |message|%>
          <%= render "messages/message", message: message %>
        <%end %>
      <%end %>
    </div>
  </div>
  <%= simple_form_for [@user, @message] do |f| %>
    <%= f.input :content, as: :string, label: false, input_html: { 'data-conversation-subscription-target': 'input' } %>
  <% end %>
</div>
