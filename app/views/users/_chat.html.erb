<h4>Your chat</h4>
<div class="card">
  <% if @messages.any? %>
    <% @messages.each do |message|%>
      <small>
      <strong> <%= message.user.username%> </strong>
        <i> <%= message.created_at.strftime("%a %b %e at %l:%M %p") %> </i>
      </small>
      <%= message.content %>
    <%end %>
  <% else %>
    <p> Start your conversation with <%= @user.username %> </p>
  <% end %>
  <%= simple_form_for [@user, @message] do |f| %>
  <%= f.input :content, as: :string, label: false %>
  <%= f.submit "Send Reply", class: "btn btn-secondary" %>
  <% end %>
</div>
