<h4>Your chat</h4>
<div class="card">
  <% if @messages.any? %>
    <div class="messages", data-controller="conversation-subscription",  data-conversation-subscription-conversation-id-value="<%= @conversation.id %>">
      <% @messages.each do |message|%>
        <%= render "messages/message", message: message %>
      <%end %>
    </div>
  <% else %>
    <p> Start your conversation with <%= @user.username %> </p>
  <% end %>
  <%= simple_form_for [@user, @message] do |f| %>
  <%= f.input :content, as: :string, label: false %>
  <% end %>
</div>
